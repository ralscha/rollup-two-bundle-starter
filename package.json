{
  "name": "rollup-two-bundle-starter",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dist": "cross-env NODE_ENV=production npm run build && npm run uglify && npm run build:hash",
    "uglify": "uglifyjs --compress --mangle -o dist/bundle.js dist/bundle.js && uglifyjs --compress --mangle -o dist/bundle-legacy.js dist/bundle-legacy.js",
    "clean": "shx rm -rf dist",
    "prebuild": "npm run clean",
    "build": "npm run build:js && npm run build:css && npm run build:html && npm run build:assets",
    "build:css": "shx mkdir -p dist && cleancss -o dist/main.css src/css/main.css",
    "build:js": "rollup -c",
    "build:html": "shx cp src/*.html dist/",
    "build:assets": "shx mkdir -p dist/assets && shx cp src/assets/* dist/assets/",
    "build:hash": "hashmark -r -l 8 --cwd dist *.{js,css} {name}.{hash}{ext} | map-replace -m \"<[^>]+>\" dist/index.html",
    "preserve": "npm run clean && npm run build:assets",
    "serve": "http-server dist -o -a localhost -p 9090",
    "servedist": "npm run dist && http-server dist -o -a localhost -p 9090",
    "watch": "npm-run-all --parallel watch:* serve",
    "watch:js": "onchange src/**/*.js -i -- npm run build:js",
    "watch:css": "onchange src/**/*.css -i -- npm run build:css",
    "watch:html": "onchange src/**/*.html -i -- npm run build:html",
    "watch:assets": "onchange src/assets/** -i -- npm run build:assets"
  },
  "author": {
    "name": "Ralph Schaer",
    "email": "ralphschaer@gmail.com",
    "url": "https://github.com/ralscha"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "7.0.0",
    "whatwg-fetch": "3.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.2.0",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/preset-env": "7.2.0",
    "clean-css": "4.2.1",
    "clean-css-cli": "4.2.1",
    "cross-env": "5.2.0",
    "hashmark": "5.0.0",
    "http-server": "0.11.1",
    "map-replace": "1.0.2",
    "npm-run-all": "4.1.5",
    "onchange": "5.2.0",
    "rollup": "0.67.4",
    "rollup-plugin-babel": "4.1.0",
    "rollup-plugin-commonjs": "9.2.0",
    "rollup-plugin-node-resolve": "4.0.0",
    "rollup-plugin-replace": "2.1.0",
    "shx": "0.3.2",
    "uglify-es": "3.3.9"
  }
}
